package  {      import flash.display.*;      public class DrawRect extends Sprite      {          public var xPos:Number;          public var yPos:Number;          public var rWidth:Number;          public var rHeight:Number;          public var color:uint;		        public function DrawRect(xPos:Number,yPos:Number,rWidth:Number,rHeight:Number,color:uint)          {			this.graphics.beginGradientFill(GradientType.RADIAL, [color, color], [1,0], [0,255]);			this.graphics.drawRect(xPos,yPos,rWidth,rHeight);			this.graphics.endFill();        }      }  }